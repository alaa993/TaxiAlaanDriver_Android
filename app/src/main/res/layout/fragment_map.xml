<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.taxialaan.drivers.Activity.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Map frame -->

        <LinearLayout
            android:id="@+id/ll_01_mapLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/provider_map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="16dp"
            android:src="@drawable/menu_icon" />

        <ImageView
            android:id="@+id/imgCurrentLoc"
            android:layout_width="24dp"
            android:layout_gravity="end"
            android:layout_height="24dp"
            android:layout_margin="16dp"
            android:src="@drawable/current_loc" />

        <TextView

            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:id="@+id/currentTemperatureField"
            android:text=""
            android:layout_marginTop="@dimen/_38sdp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="@dimen/_10sdp"
            android:background="@drawable/shadow_view"
            />

        <LinearLayout
            android:id="@+id/destinationLayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/_50sdp"
            android:background="@color/content_background"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:id="@+id/src_dest_txt"
                    android:text="Drop Address"
                    android:lineSpacingMultiplier="1.2"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/destination"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="Where to?"
                    android:lineSpacingMultiplier="1.2"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_14sdp" />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:alpha=".20"
                android:background="@color/black_text_color" />

            <ImageView
                android:id="@+id/imgNavigationToSource"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="@dimen/_10sdp"
                app:srcCompat="@drawable/nav_button" />
        </LinearLayout>

        <!-- Content frame 1: accept or reject now-->

        <!-- Content frame 2: accept or reject later-->

        <LinearLayout
            android:id="@+id/ll_02_contentLayer_accept_or_reject_later"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:weightSum="100">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="55" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="45"
                android:background="@color/content_background"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="@dimen/content_padding"
                android:weightSum="45">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="18"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img02User"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:src="@drawable/placeholder_image" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <TextView
                            android:id="@+id/txt02UserName"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="bottom"
                            android:layout_weight="50"
                            android:gravity="bottom"
                            android:text="User"
                            android:textSize="@dimen/text_size_medium" />

                        <RatingBar
                            android:id="@+id/rat02UserRating"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="top"
                            android:layout_weight="50"
                            android:numStars="5" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt02ScheduledTime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:gravity="center|end"
                        android:text="30th sept 2017 at 8:30pm" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/txt02From"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="45"
                        android:gravity="center_vertical|start"
                        android:text="No 10 chennai" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:text="-" />

                    <TextView
                        android:id="@+id/txt02To"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="45"
                        android:gravity="center_vertical|end"
                        android:text="No 10 chennai" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="15" />

            </LinearLayout>

        </LinearLayout>

        <!-- Content frame 3: service flow -->
        -

        <LinearLayout
            android:id="@+id/ll_03_contentLayer_service_flow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            android:visibility="gone"
            android:weightSum="100">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/content_background"
                android:orientation="vertical"
                android:paddingTop="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:background="@color/content_background"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img03Status1"
                        android:layout_width="@dimen/circular_status_image_width"
                        android:layout_height="@dimen/circular_status_image_height"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:src="@drawable/arrived" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="1dp"
                        android:background="#000000" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img03Status2"
                        android:layout_width="@dimen/circular_status_image_width"
                        android:layout_height="@dimen/circular_status_image_height"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:src="@drawable/pickup" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="1dp"
                        android:background="#000000" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img03Status3"
                        android:layout_width="@dimen/circular_status_image_width"
                        android:layout_height="@dimen/circular_status_image_height"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:src="@drawable/finished" />

                </LinearLayout>


                -

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:background="@color/content_background"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:padding="@dimen/content_padding"
                    android:weightSum="35">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:orientation="horizontal"
                        android:weightSum="100">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/img03User"
                                android:layout_width="@dimen/circular_image_width"
                                android:layout_height="@dimen/circular_image_height"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:src="@drawable/placeholder_image" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="40"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:weightSum="100">

                            <TextView
                                android:id="@+id/txt03UserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:gravity="bottom"
                                android:text="User"
                                android:textSize="16sp" />

                            <RatingBar
                                android:id="@+id/rat03UserRating"
                                style="?attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:isIndicator="true"
                                android:numStars="5" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            android:alpha=".20"
                            android:background="@color/black_text_color" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="30"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img03Call"
                                android:layout_width="@dimen/circular_call_image_width"
                                android:layout_height="@dimen/circular_call_image_height"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:alpha=".57"
                                android:src="@drawable/callbutton" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/call"
                                android:textColor="@color/black_text_color"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblDistanceTravelled"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Distance Travelled :"
                            android:gravity="center"
                            android:visibility="gone"
                            android:textColor="@color/black_text_color"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/btn_cancel_ride"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/button_height"
                            android:layout_marginTop="@dimen/button_margin"
                            android:layout_marginStart="@dimen/button_margin"
                            android:layout_marginEnd="@dimen/button_margin"
                            android:background="@drawable/cancel_button_bg"
                            android:padding="@dimen/button_padding"
                            android:text="@string/cancel_ride"
                            android:textColor="@color/black_text_color" />


                        <Button
                            android:id="@+id/btn_01_status"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/button_height"
                            android:layout_marginTop="@dimen/button_margin"
                            android:layout_marginStart="@dimen/button_margin"
                            android:layout_marginEnd="@dimen/button_margin"
                            android:background="@drawable/button_corner_black"
                            android:padding="@dimen/button_padding"
                            android:text="@string/tap_when_arrived"
                            android:textColor="@color/button_text_color" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Content frame alert4: payment -->

        <LinearLayout
            android:id="@+id/ll_04_contentLayer_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:visibility="gone">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:background="@color/content_background"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="@dimen/content_padding"
                android:weightSum="50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:layout_weight="50"
                        android:gravity="left"
                        android:text="@string/Travel_costs"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt04Trip"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:gravity="left"
                        android:text="100"
                        android:textColor="@color/black_text_color"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:layout_weight="50"
                        android:gravity="left"
                        android:text="@string/Discount"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt04Copun"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:gravity="left"
                        android:textColor="@color/black_text_color"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:gravity="left"
                        android:text="@string/total"
                        android:textStyle="bold"
                        android:layout_marginLeft="25dp"/>

                    <TextView
                        android:id="@+id/txt04Total"
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="wrap_content"
                        android:gravity="left"

                        android:textColor="@color/black_text_color"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0EEEE"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="25dp"/>



                    <com.taxialaan.drivers.Utilities.MyEditText
                        android:id="@+id/edtext_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/cash"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:inputType="number"/>



                    <Button
                        android:id="@+id/btn_confirm_card"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="@dimen/button_height"
                        android:layout_margin="@dimen/button_margin"
                        android:background="@drawable/button_corner_black"
                        android:padding="@dimen/button_padding"
                        android:text="@string/tap_when_paid"
                        android:textColor="@color/button_text_color" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>



        <!-- Content frame 5: feedback -->


        <LinearLayout
            android:id="@+id/ll_05_contentLayer_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/content_background"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="@dimen/content_padding">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/ratetrip"
                        android:textSize="@dimen/text_size_medium" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img05User"
                        android:layout_width="@dimen/circular_image_width"
                        android:visibility="gone"
                        android:layout_height="@dimen/circular_image_height"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/placeholder_image" />

                    <RatingBar
                        android:id="@+id/rat05UserRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:numStars="5"
                        android:scaleX="0.4"
                        android:scaleY="0.4" />

                    <EditText
                        android:id="@+id/edt05Comment"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="@string/write"
                        android:inputType="text" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_rate_submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_margin="@dimen/button_margin"
                    android:background="@drawable/button_corner_black"
                    android:padding="@dimen/button_padding"
                    android:text="@string/rate_user"
                    android:textColor="@color/button_text_color" />

            </LinearLayout>

        </LinearLayout>

        <!-- Button Frame 1: single button -->
        <LinearLayout
            android:id="@+id/lnrGoOffline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            android:visibility="visible">


            <Button
                android:id="@+id/btn_go_offline"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_margin="@dimen/button_margin"
                android:background="@drawable/button_corner_black"
                android:padding="@dimen/button_padding"
                android:text="@string/go_offline"
                android:textColor="@color/button_text_color" />




        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrErrorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/button_text_color"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/sad" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.3"
                    android:text="Server is temporarily unavailable.! Please check later."
                    android:textSize="@dimen/_15sdp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_01_contentLayer_accept_or_reject_now"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:visibility="gone"
            android:weightSum="100">

            <TextView
                android:id="@+id/txt01Timer"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/roundimage"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/timer_text_color"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/content_background"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="@dimen/content_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img01User"
                            android:layout_width="@dimen/circular_image_width"
                            android:layout_height="@dimen/circular_image_height"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:src="@drawable/placeholder_image" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="70"
                        android:gravity="start|center"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <TextView
                            android:id="@+id/txt01UserName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_weight="50"
                            android:gravity="start|center"
                            android:text="User"
                            android:textSize="@dimen/_14sdp" />


                        <RatingBar
                            android:id="@+id/rat01UserRating"
                            style="?attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="50"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="5" />
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/txtSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="Schedule"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:paddingStart="@dimen/_8sdp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:text="@string/pick_up"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtPickup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:minLines="2"
                    android:padding="@dimen/_5sdp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="15"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <Button
                        android:id="@+id/btn_02_reject"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_marginStart="@dimen/button_margin"
                        android:layout_marginEnd="@dimen/button_gap"
                        android:layout_weight="50"
                        android:background="@drawable/button_corner_black"
                        android:padding="@dimen/button_padding"
                        android:text="@string/reject"
                        android:textColor="@color/button_text_color" />

                    <Button
                        android:id="@+id/btn_02_accept"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_marginStart="@dimen/button_gap"
                        android:layout_marginEnd="@dimen/button_margin"
                        android:layout_weight="50"
                        android:background="@drawable/button_corner_black"
                        android:padding="@dimen/button_padding"
                        android:text="@string/accept"
                        android:textColor="@color/button_text_color" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layer_call_phone"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:visibility="gone"
            android:weightSum="100"
            android:background="@color/text_color_white">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/content_background"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_9sdp"
                android:paddingLeft="30dp"
                android:gravity="center"
                android:visibility="visible"
                android:id="@+id/lnCall">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    >

                    <Button
                        android:id="@+id/btnCancelCall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Done"
                         />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_viber"
                        android:layout_width="@dimen/circular_status_image_width"
                        android:layout_height="@dimen/circular_status_image_width"

                        android:src="@drawable/viber" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_web"
                        android:gravity="center"
                        android:textColor="@color/black_text_color"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:text="Viber"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_whatsapp"
                        android:layout_width="54dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/whatsapp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_web"
                        android:gravity="center"
                        android:text="WhatsApp"
                        android:textColor="@color/black_text_color"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="20dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_call_phone"
                        android:layout_width="@dimen/circular_status_image_width"
                        android:layout_height="@dimen/circular_status_image_width"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/help_call" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_web"
                        android:gravity="center"
                        android:textColor="@color/black_text_color"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:text="Phone"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragmet_ln_internet"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:visibility="gone"
            android:background="@color/content_background"
            android:weightSum="100">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:text="@string/internet"
                android:minLines="2"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="visible" />

        </LinearLayout>


    </FrameLayout>

    <ImageView
        android:id="@+id/sos"
        android:layout_width="wrap_content"
        android:src="@drawable/sos"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_10sdp"
        android:visibility="gone"
        android:layout_height="wrap_content" />

</RelativeLayout>
